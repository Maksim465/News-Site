<h2>Редагування коментарю</h2>

<%= form_for [@post, @comment] do |f| %>
    <p>
        Користувач<br>
            <%= f.text_field :username, class: "form-control" %>
    </p>
    <p>
        Текст коментаря<br>
            <%= f.text_area :body, class: "form-control" %>
    </p>

    <%= f.submit "Зберегти", class: "btn btn-success" %>
<% end %>
