<h2>Вхід</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>

  <div class="form-group mb-3">
    <%= f.label :email, "Електронна пошта", class: "mb-1" %><br />
    <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password, "Пароль", class: "mb-1" %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
  </div>

<% if devise_mapping.rememberable? %>

  <div class="form-check mb-3">
    <%= f.check_box :remember_me, class: "form-check-input" %>
    <%= f.label :remember_me, "Запам'ятати мене", class: "form-check-label ml-2" %>
  </div>

<% end %>

  <div class="actions">
    <%= f.submit "Увійти", class: "btn btn-primary mb-2" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>