<h2>Забули свій пароль?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, "Електронна пошта", class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="actions mb-3">
    <%= f.submit "Надіслати мені інструкції для відновлення пароля", class: "btn btn-primary" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>