<h2>Реєстрація</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mb-3">
    <%= f.label :email, "Електронна пошта", class: "mb-1" %><br/>
    <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password, "Пароль" %>
    <% if @minimum_password_length %>
      <em>(мінімум <%= @minimum_password_length %> символів)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password_confirmation, "Підтвердження паролю" %><br/>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Зареєструватися", class: "btn btn-primary mb-2" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>