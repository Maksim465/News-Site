<h2>Редагування Користувача</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form" }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, "Електронна пошта", class: "form-label" %><br/>
    <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-3">
    <%= f.label :password, "Пароль", class: "form-label" %> <i>(залиште порожнім, якщо ви не хочете його змінювати)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <div class="mt-2">
        <em>мінімум <%= @minimum_password_length %> символів</em>
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Підтвердження паролю", class: "form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :current_password, "Поточний пароль", class: "form-label" %> <i>(нам потрібен ваш поточний пароль, щоб підтвердити ваші зміни)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="actions mb-3">
    <%= f.submit "Оновити", class: "btn btn-primary" %>
  </div>
  
<% end %>

<div class="mb-3">
  <h3>Видалити мій акаунт</h3>
</div>

<div><%= button_to "Видалити обліковий запис", registration_path(resource_name), data: { confirm: "Ви хочете видалити?", turbo_confirm: "Ви хочете видалити?" }, method: :delete, class: "btn btn-danger mb-3" %></div>

<%= link_to "Назад", :back, class: "btn btn-dark" %>